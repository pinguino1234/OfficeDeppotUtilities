<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Height="50" MaxWidth="550"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:vm="clr-namespace:OfficeDeppotUtiliteies.ViewModels"
             x:DataType="vm:PdfDataViewModel"
             x:Class="OfficeDeppotUtiliteies.Views.PdfDataView">
 
    <Grid ColumnDefinitions="auto, *, auto, auto">
		<Image Source="/Assets/pdf.png" Width="24" Margin="5"/>

        <StackPanel Grid.Column="1" >
			<TextBlock Text="{Binding FileName}"/>
            <TextBlock Text="{Binding PageCount}" Foreground="Gray" FontWeight="Bold"/>
        </StackPanel>
        
        <ui:SymbolIcon Symbol="Delete" FontSize="24" Grid.Column="3" Margin="5" Cursor="Hand"/> 
    </Grid>
</UserControl>
